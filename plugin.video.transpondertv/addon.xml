<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.transpondertv" version="1.0.2" name="Transponder.TV" provider-name="Lunatixz">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.simplecache" version="1.0.0"/>
        <import addon="script.module.requests" version="2.7.0"/>
        <import addon="script.module.mechanize" version="0.2.6"/>
        <import addon="script.module.pytz" version="2014.2"/>
        <import addon="script.module.beautifulsoup4" version="4.3.2"/>
        <import addon="script.module.uepg" version="1.0.3"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <description lang="en_GB">Transponder.tv takes things to the next level in providing each user with their own remote tv set for controlling and viewing wherever they are. With the majority of UK Free to Air channels available and a soon to be launched recording feature, you will be able to watch your own tv wherever you are and whenever you want and who doesn't want free TV?</description>
        <platform>all</platform>
