        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.simplecache" version="1.0.0"/>
        <import addon="script.module.youtube.dl" version="17.0.0"/>
        <import addon="plugin.video.youtube" version="5.1.8"/>
